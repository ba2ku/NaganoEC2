<!DOCTYPE html>
<html>

<head>
  <title>Nagano</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
  <script type="text/javascript" src="./footerFixed.js"></script>
</head>

<body>
  <header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-black">
      <a class="navbar-brand" href="#">NaganoEC</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
        aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <% if user_signed_in? %>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <li class="nav-item li_margin">
            <%= link_to "ホーム", root_path, class: "btn btn-dark nav_margin"%>
          </li>

          <li class="nav-item li_margin">
            <%= link_to "マイページ", user_mypage_path(current_user), class: "btn btn-dark nav_margin" %>
          </li>
          <li class="nav-item li_margin">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-dark nav_margin" %>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="アーティスト名等">
          <button class="btn btn-dark nav_margin my-2 my-sm-0" type="submit">検索</button>
        </form>
      </div>
      <% else %>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <li class="nav-item li_margin">
            <%= link_to "ホーム", root_path, class: "btn btn-dark nav_margin"%>
          </li>
          <li class="nav-item li_margin">
            <%= link_to "ログイン", new_user_session_path, class: "btn btn-dark" %>
          </li>
          <li class="nav-item li_margin">
            <%= link_to "新規作成", new_user_registration_path, class: "btn btn-dark" %>
          </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="">
          <button class="btn btn-dark nav_margin my-2 my-sm-0" type="submit">検索</button>
        </form>
      </div>
      <% end %>
    </nav>
  </header>

  <article>
    <%= yield %>
  </article>
  <%= render 'users/footer' %>

</body>

</html>